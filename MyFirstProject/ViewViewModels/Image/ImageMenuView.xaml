<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModels.Image.ImageMenuView"
             Title="{Binding Title}">

    <StackLayout Margin="0,20,0,20">
        
        <Label Text="Welcome to Images!" 
                HorizontalOptions="Center" />
        <Button Text="Embedded Image"
                Command="{Binding OnEmbeddedImageClicked}"/>
        <Button Text="Embedded Image Project"
                Command="{Binding OnEmbeddedImageProjectClicked}"/>
        <Button Text="URI Image"
                Command="{Binding OnUriImageClicked}"/>
        <Button Text="URI Image Project"
                Command="{Binding OnUriImageProjectClicked}"/>
        <Button Text="URI Image Cache"
                Command="{Binding OnUriImageCacheClicked}"/>
        <Button Text="Activity Indicator"
                Command="{Binding OnActivityIndicatorClicked}"/>
        

    </StackLayout>
    
</ContentPage>