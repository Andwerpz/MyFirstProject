<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModels.Controls.DateTimePicker.DateTimePickerView"
             Title="{Binding Title}">

    <StackLayout VerticalOptions="CenterAndExpand">

        <Button Text="Date Picker XAML"
                    HorizontalOptions="CenterAndExpand" 
                    Command="{Binding OnDatePickerXamlClicked}"/>

        <Button Text="Date Picker VM"
                    HorizontalOptions="CenterAndExpand"
                    Command="{Binding OnDatePickerVmClicked}"/>

    </StackLayout>

</ContentPage>