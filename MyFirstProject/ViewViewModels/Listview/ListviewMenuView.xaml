<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModels.Listview.ListviewMenuView"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout Margin="0,20,0,20">
            <Label Text="Welcome to Listview!" 
                HorizontalOptions="Center" />
            <Button Text="ListView Page"
                    Command="{Binding OnListViewPageClicked}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>