<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModels.Layouts.LayoutsMenuView"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout Margin="0,20,0,20">

            <Label Text="Welcome to Layouts!"
                   HorizontalOptions="Center"/>
            <Button Text="Absolute"
                    Command="{Binding OnAbsoluteLayoutClicked}"/>
            <Button Text="Relative"
                    Command="{Binding OnRelativeLayoutClicked}"/>
            <Button Text="Relative Project"
                    Command="{Binding OnRelativeLayoutProjectClicked}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>